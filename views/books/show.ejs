<% include ../partials/header %>
 
<section>
      <div>
            <a href="/books/new" class="btn btn-warning">Add New Book</a>
          </div>
    <% for ( let book of books ) { %>
      <table class="table table-striped table-dark">
        <thead>
        <tr>

            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Price</th>
            <th scope="col">Year</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>

        <tr>

            <td><%=book.title %></td>
            <td><%=book.author %></td>
            <td><%=book.price %></td>
            <td><%=book.year %></td>


            <td><a href="/books/<%= book.id %>" class="btn btn-warning">SHOW</a></td>
            <td><a href="/books/<%= book.id %>/edit" class="btn btn-dark">EDIT</a></td>
            <td>  <form action="/books/<%= book.id %>/delete" method="post"  onsubmit="return confirm('Are you sure you want to delete this book?');">
                    <input type="hidden" name="id" value="<%= book.id %>">
                          <button type="submit" class="btn btn-danger">DELETE</button>
                                  </form>Delete</td>



                       

                           






        </tr>


        </tbody>
    </table>
      <% } %>

</section>
<% include ../partials/footer %>
