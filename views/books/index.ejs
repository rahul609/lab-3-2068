<% include ../partials/header %>
 
<section>

    <% for ( let book of books ) { %>
      <table class="table table-striped table-dark">
        <thead>
        <tr>

            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Price</th>
            <th scope="col">Year</th>
            <th scope="col">Add</th>
            <th scope="col">Edit & Update</th>
            <th scope="col">Delete</th>
        </tr>
        </thead>
        <tbody>

        <tr>

            <td><%=book.title %></td>
            <td><%=book.author %></td>
            <td><%=book.price %></td>
            <td><%=book.year %></td>

            <td><a href="/books/new" class="btn btn-warning">Add</a></td>
            <td><a href="/books/<%= book.id %>/edit" class="btn btn-dark">EDIT / UPDATE</a></td>
            <td> <form action="/books/<%= book.id %>/delete" method="post" onsubmit="return confirm('Confirm to delete the book ?');">
                    <input type="hidden" name="id" value="<%= book.id %>">
                    <button type="submit" class="btn btn-danger">DELETE</button>
                </form></td>

        </tr>


        </tbody>
    </table>
      <% } %>

</section>
<% include ../partials/footer %>%>